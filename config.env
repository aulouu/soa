# Централизованная конфигурация для всей микросервисной архитектуры

# === Infrastructure Ports ===
CONSUL_PORT=8500
CONFIG_SERVER_PORT=8888
EUREKA_SERVER_PORT=8761
ZUUL_GATEWAY_PORT=8080
SERVICE1_EUREKA_PORT=8089

# === Service Ports ===
# human-beings-service (Jakarta EE + EJB + Consul)
SERVICE1_PORT=8082
SERVICE1_EUREKA_PORT=8089

# heroes-service (Spring Cloud + Eureka + Ribbon)
# ВАЖНО: Service2 порты должны не пересекаться с Service1!
# Service1 занимает: 8082, 8083, 8084... (WildFly)
# Service2 начинается с 8091 чтобы избежать конфликтов
SERVICE2_PORT=8091

# === Load Balancing ===
# Сколько инстансов каждого сервиса запускать (1 или 2)
SERVICE1_INSTANCES=2
SERVICE2_INSTANCES=2

# === Cloudflare Tunnel ===
CLOUDFLARED_ENABLED=true
CLOUDFLARED_TUNNEL_NAME="soa-lab3"

# === Database Configuration ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=soa_lab3
DB_USER=postgres
DB_PASSWORD=postgres

# === SSL Configuration ===
SSL_ENABLED=true
SSL_KEY_STORE_PATH=../ssl/keystore.p12
SSL_KEY_STORE_PASSWORD=changeit
SSL_KEY_ALIAS=soa-services

# === Consul Configuration ===
CONSUL_HOST=localhost
CONSUL_DATACENTER=dc1

# === Service Discovery ===
EUREKA_HOST=localhost

# === Memory Settings (для маломощного сервера) ===
CONFIG_SERVER_MEMORY="-Xms128m -Xmx256m"
EUREKA_SERVER_MEMORY="-Xms128m -Xmx256m"
ZUUL_GATEWAY_MEMORY="-Xms128m -Xmx256m"
SERVICE1_MEMORY="-Xms256m -Xmx512m"
SERVICE2_MEMORY="-Xms128m -Xmx512m"

# === Frontend Configuration ===
FRONTEND_PORT=3000
API_BASE_URL=https://localhost:${ZUUL_GATEWAY_PORT}
