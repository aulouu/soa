<!--            <groupId>com.mulesoft.modules</groupId>-->
<!--            <artifactId>mule-dw-module</artifactId>-->
<!--            <version>1.0.0</version>-->
<!--            <classifier>mule-plugin</classifier>-->
<!--        </dependency>-->
        <!-- Другие зависимости по необходимости -->
    </dependencies>

</project>
